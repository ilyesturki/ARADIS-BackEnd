{
  "compilerOptions": {
    "target": "ES2021", 
    "module": "commonjs", 
    "sourceMap": true, 
    "outDir": "dist", 
    "rootDir": "src",
    "strict": true, 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true, 
    "resolveJsonModule": true, 
    "experimentalDecorators": true, 
    "emitDecoratorMetadata": true 
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules", "dist"] 
}
